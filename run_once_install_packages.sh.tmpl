#!/bin/bash

install () {
	directories=( {{ .chezmoi.sourceDir }}/tools/packages/$1/*.yaml )
	for fname in $directories
	do
		$2 python3 {{ .chezmoi.sourceDir }}/tools/install-package.py $fname
	done
}

{{- if eq .chezmoi.osRelease.name "Arch Linux" }}
install arch
{{ else if eq .chezmoi.osRelease.name "Ubuntu" }}
install ubuntu sudo
{{ else if eq .chezmoi.osRelease.name "Debian GNU/Linux" }}
install debian sudo
{{ end -}}
