# Ghostty Configuration

# -----------------------------------------------------------------------------
# -- Appearance
# -----------------------------------------------------------------------------

# You can list available themes with `ghostty +list-themes`.
theme = "light:Ayu Light,dark:Nord"

# Corresponds to maximizing the window on startup.
maximize = true

# -----------------------------------------------------------------------------
# -- Font
# -----------------------------------------------------------------------------

font-size = 13.0
font-family = "JetBrains Mono"
font-family-italic = "Victor Mono"
font-family-bold = "JetBrains Mono"
font-family-bold-italic = "Victor Mono"

# -----------------------------------------------------------------------------
# -- Keybindings
# -----------------------------------------------------------------------------

# You can list available actions with `ghostty +list-actions`.

# FIXME(meijieru)
keybind = "ctrl+alt+t=toggle_quick_terminal"
